		{
			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"  const json = pm.response.json();",
							"  if (json.token) {",
							"    // Spara token som collection-variabel",
							"    pm.collectionVariables.set('token', json.token);",
							"    // Dekoda JWT payload och spara sub (userId) och username",
							"    try {",
							"      const base64Url = json.token.split('.')[1];",
							"      const base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');",
							"      const payload = JSON.parse(atob(base64));",
							"      if (payload && payload.sub) pm.collectionVariables.set('userId', payload.sub);",
							"      if (payload && payload.username) pm.collectionVariables.set('username', payload.username);",
							"      console.log('Sparade token, userId och username på collection-variabler.');",
							"    } catch (e) {",
							"      console.log('Kunde inte dekoda JWT:', e.message);",
							"    }",
							"  }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"username\": \"simon\",\n  \"password\": \"hemligt\"\n}",
					"options": {
